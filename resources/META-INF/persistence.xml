<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="IFSULModuloPU">
    	<class>main.java.ifsul.modulo.jpa.model.Pais</class>
        <properties>    
            <!-- Database connection settings -->
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/urlshortener" />
            <property name="jakarta.persistence.jdbc.user" value="root" />
            <property name="jakarta.persistence.jdbc.password" value="123456" />
            
            <!-- Set Schema default -->
            <property name="hibernate.default_schema" value="ifsuljpa"/>

            <!-- Automatically export the schema -->
            <property name="jakarta.persistence.schema-generation.database.action" value="update" />

            <!-- Echo all executed SQL to console -->
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.format_sql" value="true" />
            <property name="hibernate.highlight_sql" value="true" />
       </properties>
    </persistence-unit>
</persistence>